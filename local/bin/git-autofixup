#!/bin/sh
set -eu

cd "$(git rev-parse --show-toplevel)"

git diff-index --no-prefix -U0 --cached HEAD | awk '
  /^--- / { file = $2 }
  /^@@ / { line = -$2; exit }
  END { printf "-L%d,+1 -- %s\n", line, file }
' | xargs git blame --porcelain HEAD | awk 'NR == 1 { print $1 }' | xargs git commit --fixup
