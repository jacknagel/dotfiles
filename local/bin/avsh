#!/bin/sh
set -eu

profile=

if [ $# -eq 0 ] && [ -n "${AWS_PROFILE-}" ]; then
  profile=$AWS_PROFILE
elif [ $# -eq 1 ] && aws-vault list --profiles | grep -q -F --line-regexp -e "$1"; then
  profile=$1
else
  profile=$(aws-vault list --profiles | fzy --query="$*")
fi

pw=$(op item get "aws-vault Keychain" --fields label=password)
security unlock-keychain -p "$pw" aws-vault.keychain-db
exec aws-vault exec "$profile"
