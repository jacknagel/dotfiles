# vim:ft=gitconfig

[alias]
	ab = absorb
	ap = add --patch
	au = add --update
	br = branch -vv
	ba = branch -avv
	ca = commit --amend
	cane = commit --amend --no-edit
	cf = commit --fixup
	ci = commit
	co = checkout
	cp = cherry-pick
	dc = diff --cached
	dh = diff HEAD
	di = diff
	du = diff @{u}
	ff = merge --ff-only
	jd = jump diff
	jg = jump grep
	jm = jump merge
	lg = log --graph --format=oneline-with-date
	ls = ls-files -oc --exclude-standard
	ra = rebase --abort
	re = rebase --edit-todo
	ri = rebase --interactive
	rr = rebase --continue
	rs = rebase --skip
	st = status --short --branch -uno
	thx = shortlog -ns
[branch]
	autoSetupMerge = always
	autoSetupRebase = always
	sort = authordate
[color "grep"]
	filename = magenta
	linenumber = green
	match = bold red
	separator = cyan
[commit]
	verbose = true
[core]
	pager = less -S ; -S - don't wrap long lines
	sshCommand = /usr/bin/ssh
[credential]
	helper = osxkeychain
[diff]
	renames = copies
	tool = vimdiff
	algorithm = histogram
[diff "gpg"]
	textconv = gpg -qd --no-tty
[diff "gzip"]
	textconv = gzip -d -c
[diff "keybox"]
	textconv = kbxutil
	xfuncname = "^((Uid|Key-Kid)\\[.*)"
[diff "keyring"]
	textconv = gpg -v
	xfuncname = "^((pub|uid) .*)"
[diff "plist"]
	textconv = plutil -convert xml1 -o -
[diff "sqlite"]
	textconv = sh -c 'exec sqlite3 "$@" .dump' -
[diff "tar"]
	textconv = tar -tvf
[diff "zip"]
	textconf = unzip -c -a
[difftool]
	prompt = false
[fetch]
	prune = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[grep]
	lineNumber = true
	patternType = extended
[help]
	format = web
[init]
	defaultBranch = main
	; templatedir = ~/.config/git/template
[interactive]
	singleKey = true
	diffFilter = diff-highlight
[log]
	decorate = auto
[merge]
	conflictStyle = zdiff3
	tool = vimdiff3
[merge "bundle"]
	name = bundle
	driver = bundle
[merge "npm-merge-driver"]
	name = automatically merge npm lockfiles
	driver = npm-merge-driver %A %O %B %P
[pager]
	; +X - clear the screen on exit
	; -S - don't wrap long lines
	log = diff-highlight | less -S -+X
	show = diff-highlight | less -S
	diff = diff-highlight | less -S
[pretty]
	oneline-with-date = %C(auto)%h%d %s %C(cyan)%C(dim)(%ch)
[pull]
	rebase = merges
[rebase]
	autoSquash = true
	autoStash = true
	stat = true
[remote]
	pushDefault = origin
[rerere]
	enabled = true
	autoUpdate = true
[stash]
	showPatch = true
[submodule]
	fetchJobs = 0
[tag]
	sort = -version:refname
[transfer]
	fsckObjects = true
[url "ssh://git@github.com"]
	insteadOf = https://github.com
[user]
	useConfigOnly = true
[web]
	browser = open
